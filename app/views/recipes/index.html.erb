<p style="color: green"><%= notice %></p>


<div id="recipes" class="container">
  <h1>Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, :class => "btn btn-primary" %>
  <div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3">
      <div class="recipe-card mb-4">
         <%= image_tag recipe.image.url, class: "recipe-show" if recipe.image? %>

          <%= render recipe %>
          <p>
            <%= link_to "Show this recipe", recipe, :class => "btn btn-primary" %>
          </p>
      </div><!-- recipe-card-->
      </div><!-- col-md-3-->
  <% end %>
</div><!-- row-->
</div>


